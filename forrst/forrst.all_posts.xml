<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd" securityLevel="any">
    <meta>
        <author>Carson McDonald</author>
        <description>Returns a list of all posts in reverse-chron order.</description>
        <documentationURL>http://forrst.com/api#m-posts-all</documentationURL>
        <sampleQuery>select * from {table};</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="" produces="JSON">
            <urls>
                <url>http://forrst.com/api/{version}/posts/all</url>
            </urls>
            <inputs>
            	<key id="version" type="xs:string" paramType="path" required="true" default="v2" />

            	<key id="after" type="xs:string" paramType="query" required="false" />
            </inputs>
        </select>
     </bindings>
</table>
