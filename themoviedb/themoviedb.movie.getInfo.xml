<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd" https="false">
<meta>
    <author>Micah Laaker (micah@laaker.com)</author>
    <description>TheMovieDB Movie Search</description>
    <documentationURL>http://api.themoviedb.org/2.1/methods/Movie.getInfo</documentationURL>
    <sampleQuery>select * from {table} where api_key='yourkeygoeshere' and movie_id='33'</sampleQuery>
</meta>
<bindings>
    <select itemPath="//movie" produces="XML">
        <urls>
            <url>http://api.themoviedb.org/2.1/Movie.getInfo/{lang}/xml/{api_key}/{movie_id}</url>
        </urls>
        <inputs>
			<key type="xs:string" paramType="path" default="en" id="lang" />
			<key type="xs:string" paramType="path" private="true" id="api_key" />
            <key type="xs:string" paramType="path" id="movie_id" />
		</inputs>
    </select>
</bindings>
</table>