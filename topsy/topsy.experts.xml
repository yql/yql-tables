<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
        <author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
        <description>Topsy.com API</description>
        <documentationURL>http://code.google.com/p/otterapi/wiki/Resources</documentationURL>
        <sampleQuery>SELECT * FROM {table} WHERE q="nosql"</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="json.response" produces="JSON">
            <urls>
                <url>http://otter.topsy.com/experts.json</url>
            </urls>
						<paging model="page">
							<start id="page" default="1" />
							<pagesize id="perpage" max="50" />
							<total default="10" />
						</paging>
            <inputs>
                <key id="q" type="xs:string" paramType="query" required="true"/>

								<!-- 
									TODO:
										- include paging in all other API endpoints returning lists
										- potentially changing the itemPath
										- add the List Parameters to the inputs: http://code.google.com/p/otterapi/wiki/ResListParameters
							  -->
            </inputs>
        </select>	
    </bindings>
</table>