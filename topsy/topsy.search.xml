<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
        <author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
        <description>Topsy.com API</description>
        <documentationURL>http://code.google.com/p/otterapi/wiki/Resources</documentationURL>
        <sampleQuery>SELECT * FROM {table} WHERE q="YQL"</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="json.response.list" produces="JSON">
            <urls>
                <url>http://otter.topsy.com/search.json</url>
            </urls>
						<paging model="page">
							<start id="page" default="1" />
							<pagesize id="perpage" max="50" />
							<total default="10" />
						</paging>
            <inputs>
								<!-- Search query string.. -->
                <key id="q" type="xs:string" paramType="query" required="true"/>
								<!-- 
									Time window for results.
									dynamic - will pick the most relevant window. 
									Possible responses are 1-23 hours or 1-100 days. (For example: h6 or d10). 
									h last hour, d last day, w last week, m last month, a all time.  -->
								<key id="window" type="xs:string" paramType="query" default="dynamic"/>
								<!-- The type of result. Default is nothing, which includes all types. Other supported values are image, tweet and video-->
								<key id="type" type="xs:string" paramType="query"/>
            </inputs>
        </select>	
    </bindings>
</table>