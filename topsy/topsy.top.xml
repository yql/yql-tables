<?xml version="1.0" encoding="UTF-8"?>
<table xmlns="http://query.yahooapis.com/v1/schema/table.xsd">
    <meta>
        <author>Sebastian Spier (http://twitter.com/#!/sebastianspier/)</author>
        <description>Topsy.com API</description>
        <documentationURL>http://code.google.com/p/otterapi/wiki/Resources</documentationURL>
        <sampleQuery>SELECT * FROM {table} WHERE thresh="top100" AND allow_lang="en"</sampleQuery>
    </meta>
    <bindings>
        <select itemPath="json.response" produces="JSON">
            <urls>
                <url>http://otter.topsy.com/top.json</url>
            </urls>
            <inputs>
								<key id="thresh" type="xs:string" paramType="query" required="true"/>
								<key id="type" type="xs:string" paramType="query"/>
								<key id="allow_lang" type="xs:string" paramType="query"/>
            </inputs>
        </select>	
    </bindings>
</table>